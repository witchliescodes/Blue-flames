<script>
 $(document).ready(function () {

    $(".hpestadis").hide();


    $(".hpest").click(function () {
        $(".hpestadis").fadeIn(); 
    });


    $(".hcerr").click(function () {
        $(".hpestadis").fadeOut(); 
    });


    $(".hpestadis").click(function (e) {
        if ($(e.target).is(".hpestadis")) {
            $(".hpestadis").fadeOut(); 
        }
    });
});  
</script>
